@model MalawiProjectsInventoryMVC.Entities.Donor

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3">@Model.Name</h1>
            <p><strong>Address:</strong> @Model.Address</p>
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-1">
            <i class="bi bi-pencil-square">Edit</i>
        </a>
    </div>

    
    
    <!-- Add Donation -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <i class="bi bi-plus-circle me-1"></i> Add Donation
        </div>
        <div class="card-body">
            <form asp-action="AddDonation" class="row g-3 align-items-end">
                <input type="hidden" name="donorId" value="@Model.Id" />
                <div class="col-md-6">
                    <label for="donationDate" class="form-label">Donation Date</label>
                    <input type="date" class="form-control" name="donation.DonationDate" id="donationDate" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add Donation
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Donations != null && Model.Donations.Any())
    {
        <h4 class="mb-3">Donations</h4>

        @for (int i = 0; i < Model.Donations.Count; i++)
        {
            var donation = Model.Donations[i];
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>@donation.DonationDate.ToShortDateString()</strong>
                    <a asp-action="PrintQRCodes"
                       asp-route-donorId="@Model.Id"
                       asp-route-donationIndex="@i"
                       class="btn btn-outline-primary btn-sm"
                       target="_blank">
                        <i class="bi bi-printer"></i> Print QR Codes
                    </a>
                </div>

                <div class="card-body">
                    @if (donation.DonatedItems.Any())
                    {
                        <ul class="list-group mb-3">
                            @foreach (var item in donation.DonatedItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@item.Description</div>
                                        @if (item.SoldDate.HasValue)
                                        {
                                            <div>
                                                Sold: @(item.SoldDate?.ToShortDateString() ?? "—")
                                                &nbsp;|&nbsp; £@item.SoldPrice
                                            </div>
                                        }
                                    </div>

                                    @if (!item.SoldDate.HasValue)
                                    {
                                        <a asp-action="MarkItemSold"
                                           asp-route-donorId="@Model.Id"
                                           asp-route-itemId="@item.Id"
                                           class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-currency-pound"></i> Mark as Sold
                                        </a>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No items yet.</p>
                    }

                    <!-- Add Item Form -->
                    <form asp-action="AddItem" class="row g-3">
                        <input type="hidden" name="donorId" value="@Model.Id" />
                        <input type="hidden" name="donationIndex" value="@i" />
                        <div class="col-md-9">
                            <input type="text" name="item.Description" class="form-control" placeholder="Item Description" />
                        </div>
                        <div class="col-md-3 text-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle"></i> Add Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted fst-italic">This donor has no recorded donations.</p>
    }
</div>
