@model MalawiProjectsInventoryMVC.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome</h1>
        <p class="lead text-muted">Select an option below to get started</p>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Manage Donations Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">
                            <i class="bi bi-people-fill me-2"></i>Manage Donations
                        </h5>
                        <p class="card-text text-muted">View, add, and manage donations and generate QR codes for donated items.</p>
                    </div>
                    <a asp-area="" asp-controller="Donor" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-right-circle me-1"></i> Go to Donations
                    </a>
                </div>
            </div>
        </div>

        @if (Model.IsAdmin)
        {
            <!-- Generate Reports Card -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">
                                <i class="bi bi-bar-chart-fill me-2"></i>Generate Reports
                            </h5>
                            <p class="card-text text-muted">Generate end of year report for gift aid totals.</p>
                        </div>
                        <a href="#" class="btn btn-secondary disabled mt-3" aria-disabled="true">
                            <i class="bi bi-hourglass-split me-1"></i> Coming Soon
                        </a>
                    </div>
                </div>
            </div>  
        }
    </div>
</div>